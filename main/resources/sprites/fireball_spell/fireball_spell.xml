<animations        width="10"        height="10"	 >    <animation            name="right"            loop="true"            frames="10"            row="0"            default_speed="30ms" />    <animation            name="up"            loop="true"            frames="10"            row="1"            default_speed="30ms" />    <animation            name="left"            loop="true"            frames="10"            row="2"            default_speed="30ms" />    <animation            name="down"            loop="true"            frames="10"            row="3"            default_speed="30ms" /></animations>		